[ ca ]
default_ca      = CA_default

[ CA_default]
dir             = ../../config/certs-chain/root_ca      # helper variable pointing to ca specific files
database        = $dir/index     # database of certs generated by the ca
new_certs_dir   = ../../certs-chain            # one dir up to make the demo easier
certificate     = ../../certs-chain/root.pem     # one dir up to make the demo easier
serial          = $dir/serial    # file with incrementing hex serial number for certs
private_key     = ../../certs-chain/root.key

crl               = ../../certs-chain/crl.pem          # The actual CRL file
default_crl_days  = 30                        # Days before CRL expires
crl_extensions    = crl_ext                   # Extensions to add to CRL

policy          = policy_any
email_in_dn     = no             # recommended
unique_subject  = no             # recommended for easier certificate rollover
copy_extensions = none           # don't honor the extensions in the csr
default_md      = sha256

[ policy_any ]
countryName            = optional
stateOrProvinceName    = optional
organizationName       = optional
organizationalUnitName = optional
commonName             = supplied
